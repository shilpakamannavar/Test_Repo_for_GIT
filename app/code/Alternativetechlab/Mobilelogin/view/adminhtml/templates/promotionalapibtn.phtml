<script>
    require([
        'jquery',
        'prototype',
    ], function ($) {
        function function_name() {
            new Ajax.Request('<?php echo $block->getAjaxUrl(); ?>', {
                loaderArea: false,
                asynchronous: true,
                onCreate: function() {
                    $('body').loader('show');
                },
                onSuccess: function (response) {
                    $('body').loader('hide');
                    $(".response_message").addClass('success');
                    setTimeout(function () {
                        $('.response_message').removeClass('success');
                    }, 3000);
                    if (response.responseJSON.status == true) {
                       $(".response_message").text(response.responseJSON.message);
                    }
                    else {
                        $(".response_message").text('Something Went Wrong');
                    }
                }
            });
        }

        $('#promotionalapi').click(function () {
            function_name();
        });
    });
</script>

