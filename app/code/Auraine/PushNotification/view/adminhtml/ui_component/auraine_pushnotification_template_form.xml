<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">auraine_pushnotification_template_form.template_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Auraine\PushNotification\Block\Adminhtml\Template\Edit\BackButton"/>
			<button name="delete" class="Auraine\PushNotification\Block\Adminhtml\Template\Edit\DeleteButton"/>
			<button name="save" class="Auraine\PushNotification\Block\Adminhtml\Template\Edit\SaveButton"/>
			<button name="save_and_continue" class="Auraine\PushNotification\Block\Adminhtml\Template\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>auraine_pushnotification_template_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>auraine_pushnotification_template_form.template_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="template_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="template_form_data_source" class="Auraine\PushNotification\Model\Template\DataProvider">
			<settings>
				<requestFieldName>template_id</requestFieldName>
				<primaryFieldName>template_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="identifier" formElement="input" sortOrder="1">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Template</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Identifier</label>
				<dataScope>identifier</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="status" sortOrder="2" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">status</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
                <dataScope>status</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
	</fieldset>
	<fieldset name="Template">
		<settings>
			<label>Template Information</label>
		</settings>
		<field name="subject" formElement="input" sortOrder="4">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Template</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Template Subject</label>
				<dataScope>subject</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="content" formElement="textarea" sortOrder="5">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Template</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Template Content</label>
				<dataScope>content</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="destination_url" formElement="input" sortOrder="6">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Template</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Destination URL</label>
				<dataScope>destination_url</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
	<fieldset name="Notification">
		<settings>
			<label>Notification Information</label>
		</settings>
		  <field name="notification_type" sortOrder="7" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Notification Type</label>
                <dataScope>notification_type</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Auraine\PushNotification\Model\Source\TargetOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
	</fieldset>
</form>
