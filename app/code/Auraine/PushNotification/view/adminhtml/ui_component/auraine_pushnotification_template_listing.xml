<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">auraine_pushnotification_template_listing.auraine_pushnotification_template_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>auraine_pushnotification_template_columns</spinner>
		<deps>
			<dep>auraine_pushnotification_template_listing.auraine_pushnotification_template_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new Template</label>
			</button>
		</buttons>
	</settings>
	<dataSource name="auraine_pushnotification_template_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">template_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Auraine_PushNotification::Template</aclResource>
		<dataProvider name="auraine_pushnotification_template_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>template_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="auraine_pushnotification_template_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">auraine_pushnotification_template_listing.auraine_pushnotification_template_listing.auraine_pushnotification_template_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">template_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" xsi:type="url" path="auraine_pushnotification/Template/inlineEdit"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">auraine_pushnotification_template_listing.auraine_pushnotification_template_listing.auraine_pushnotification_template_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>template_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="template_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="identifier">
			<settings>
				<filter>text</filter>
				<label translate="true">identifier</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="notification_type">
			<settings>
				<filter>text</filter>
				<label translate="true">Notification Type</label>
			</settings>
		</column> 
		<column name="subject">
			<settings>
				<filter>text</filter>
				<label translate="true">subject</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="content">
			<settings>
				<filter>text</filter>
				<label translate="true">content</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="destination_url">
			<settings>
				<filter>text</filter>
				<label translate="true">destination_url</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="status" >
           <argument name="data" xsi:type="array">
               <item name="options" xsi:type="object">Auraine\PushNotification\Model\Template\Status</item>
               <item name="config" xsi:type="array">
                   <item name="filter" xsi:type="string">select</item>
                   <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                   <item name="dataType" xsi:type="string">select</item>
                   <item name="label" xsi:type="string" translate="true">Status</item>
               </item>
           </argument>
       </column>  
		<actionsColumn name="actions" class="Auraine\PushNotification\Ui\Component\Listing\Column\TemplateActions">
			<settings>
				<indexField>template_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>
