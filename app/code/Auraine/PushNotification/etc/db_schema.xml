<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="auraine_pushnotification_subscriber" resource="default" engine="innodb" comment="auraine_pushnotification_subscriber Table">
		<column xsi:type="int" name="subscriber_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="subscriber_id"/>
		</constraint>
		<column name="customer_id" nullable="true" xsi:type="int" comment="customer_id" identity="false"/>
		<column name="date_of_birth" nullable="true" xsi:type="date" comment="date_of_birth"/>
		<column name="gender" nullable="true" xsi:type="varchar" comment="gender" length="255"/>
		<column name="device_type" nullable="true" xsi:type="varchar" comment="device_type" length="255"/>
		<column name="token" nullable="true" xsi:type="text" comment="token"/>
		<column name="browser" nullable="true" xsi:type="varchar" comment="browser" length="255"/>
		<column name="created_date" nullable="true" xsi:type="date" comment="created_date"/>
		<column name="ip_address" nullable="true" xsi:type="varchar" comment="ip_address" length="255"/>
	</table>
	<table name="auraine_pushnotification_template" resource="default" engine="innodb" comment="auraine_pushnotification_template Table">
		<column xsi:type="int" name="template_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="template_id"/>
		</constraint>
		<column name="identifier" nullable="true" xsi:type="varchar" comment="identifier" length="255"/>
		<column name="status" nullable="true" xsi:type="boolean" comment="status"/>
		<column name="subject" nullable="true" xsi:type="text" comment="subject"/>
		<column name="content" nullable="true" xsi:type="text" comment="content"/>
		<column name="destination_url" nullable="true" xsi:type="text" comment="destination_url"/>
		<column name="icon" nullable="true" xsi:type="varchar" comment="icon" length="255"/>
		<column name="notification_type" nullable="true" xsi:type="varchar" length="255" comment="notification_type"/>
		<column name="store_id" nullable="true" xsi:type="varchar" length="255" comment="store id"/>
	</table>
</schema>
